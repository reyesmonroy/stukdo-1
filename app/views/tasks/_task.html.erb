<div class="panel panel-info">
  <div class="panel-heading">
    <%= link_to edit_task_path(task) do %>
      <%= time_ago_in_words(task.created_at) + " ago" %>
    <% end %>
    <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, task_path(task), method: :delete, data: { confirm: "are you sure?" }, class: "pull-right" %>
  </div>
  <div class="panel-body"><%= raw(task.content_html || task.content) %></div>
  <div class="panel-footer text-center">
  <% if task.state == 'wip' %>
    <div class="btn-group btn-group-justified">
      <%= link_to "<i class ='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "to_do"), method: :put, class: "btn btn-md btn-block btn-primary" %>
      <%= link_to "<i class ='fa fa-arrow-right'></i>".html_safe, change_task_path(task, state: "completed"), method: :put, class: "btn btn-md btn-block btn-primary"  %>
    </div>
  <% elsif task.state == 'to_do' %>
    <%= link_to "<i class ='fa fa-arrow-right'></i>".html_safe, change_task_path(task, state: "wip"), method: :put, class: "btn btn-md btn-block btn-primary"  %>
  <% else %>
    <%= link_to "<i class ='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "wip"), method: :put, class: "btn btn-md btn-block btn-primary"  %>
  <% end %>

  </div>
</div>
